{
    "name": "creativecoder/thoughtfulmuse",
    "description": "A blog of thoughts and musings",
    "authors": [
        {
            "name": "Grant Kinney",
            "email": "hi@grant.mk"
        }
    ],
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        }
    ],
    "license": "proprietary",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1",
        "ext-redis": "*",
        "ext-mbstring": "*",
        "wpackagist-theme/orvis": "*",
        "wpackagist-plugin/jetpack": "^5.2",
        "wpackagist-plugin/thesography": "^1.2",
        "wp-cli/wp-cli": "^1.3",
        "wpackagist-plugin/sendgrid-email-delivery-simplified": "^1.11",
        "wpackagist-plugin/wp-redis": "^0.6.2",
        "wpackagist-plugin/wordpress-seo": "^5.2",
        "johnpbloch/wordpress": "^4.8"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^2.4"
    },
    "scripts": {
        "post-install-cmd": [
            "if [ -f /.dockerenv ]; then chmod -R -w web/; fi"
        ]
    },
    "extra": {
        "wordpress-install-dir": "web/wp",
        "installer-paths": {
            "web/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
