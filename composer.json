{
    "name": "creativecoder/thoughtfulmuse",
    "description": "A blog of thoughts and musings",
    "authors": [
        {
            "name": "Grant Kinney",
            "email": "hi@grant.mk"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "license": "GPL-3.0",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "ext-exif": "^7.4",
        "ext-gd": "^7.4",
        "ext-json": "^7.4",
        "ext-mbstring": "^7.4",
        "ext-redis": "^5.1",
        "johnpbloch/wordpress": "^5.4",
        "wpackagist-plugin/jetpack": "^8.6.1",
        "wpackagist-plugin/thesography": "^1.3",
        "wpackagist-plugin/sendgrid-email-delivery-simplified": "^1.11",
        "wpackagist-plugin/wp-redis": "^1.0.1",
        "wpackagist-plugin/wordpress-seo": "^14.4.1",
        "wpackagist-plugin/amazon-s3-and-cloudfront": "^2.3",
        "wpackagist-plugin/amazon-web-services": "^1.0",
        "wpackagist-plugin/pj-page-cache-red": "^0.8.3",
        "wpackagist-theme/orvis": "*",
        "wp-cli/wp-cli": "^2.4"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.0.0"
    },
    "extra": {
        "wordpress-install-dir": "web/wp",
        "installer-paths": {
            "web/wp-content/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    }
}
