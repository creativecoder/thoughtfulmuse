{
    "name": "creativecoder/thoughtfulmuse",
    "description": "A blog of thoughts and musings",
    "authors": [
        {
            "name": "Grant Kinney",
            "email": "hi@grant.mk"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "license": "GPL-3.0",
    "minimum-stability": "stable",
    "require": {
        "php": "8.3.*",
        "ext-exif": "8.3.*",
        "ext-gd": "8.3.*",
        "ext-json": "8.3.*",
        "ext-mbstring": "8.3.*",
        "ext-redis": "^6.0",
        "wpackagist-plugin/thesography": "^1.3.1",
        "wpackagist-plugin/wp-redis": "1.4.4",
        "wpackagist-plugin/amazon-s3-and-cloudfront": "^3.2.6",
        "wpackagist-plugin/pj-page-cache-red": "^0.8.3",
        "wpackagist-theme/orvis": "1.1.3",
        "wp-cli/wp-cli": "^2.10.0",
        "johnpbloch/wordpress": "^6.4.3",
        "wpackagist-plugin/jetpack": "^13.0.0"
    },
    "require-dev": {
        "vlucas/phpdotenv": "^5.6.0"
    },
    "extra": {
        "wordpress-install-dir": "web/wp",
        "installer-paths": {
            "web/wp-content/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "web/wp-content/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "web/wp-content/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true
        }
    }
}
